<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRecom"
    android:layout_width="175dp"
    android:layout_height="250dp"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <ImageView
        android:id="@+id/card_recom_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/card_1"
        android:background="@color/smoky_black"/>
    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#8A000000"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/card_recom_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solo Leveling"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/aerospace_orange"/>

            <TextView
                android:id="@+id/card_recom_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet blabla. Lorem ipsum dolor sit amet blabla. Lorem ipsum dolor sit amet blabla...."
                android:textSize="11sp"
                android:textColor="@color/cornsilk"/>
        </LinearLayout>
    </AbsoluteLayout>
</androidx.cardview.widget.CardView>